{
	"Include guard":{
		"prefix": ["ifn", "guard", "include_guard", "include"],
		"body": [
			"#ifndef ${TM_FILENAME_BASE/(.*)/${1:/upcase}/}_H",
			"# define ${TM_FILENAME_BASE/(.*)/${1:/upcase}/}_H\n",
			"$0\n",
			"#endif"
		]
	},
	"Setter":{
		"prefix": ["setter", "Setter"],
		"body": [
			"set${1:/*attr_name*/}(${2:/*arg*/})", // Selecting text and setting its cursor
			"{",
			"\treturn (this->${2:/*arg*/});",
			"}",
		]
	},
	"Getter":{
		"prefix": ["Getter", "getter"],
		"body": [
			"get${1:/*attr_name*/}(${2:/*arg*/})", // Selecting text and getting its cursor
			"{",
			"\treturn (this->${2:/*arg*/});",
			"}",
		]
	}
	// Place your snippets for cpp here. Each snippet is defined under a snippet name and has a prefix, body and 
	// description. The prefix is what is used to trigger the snippet and the body will be expanded and inserted. Possible variables are:
	// $1, $2 for tab stops, $0 for the final cursor position, and ${1:label}, ${2:another} for placeholders. Placeholders with the 
	// same ids are connected.
	// Example:
	// "Print to console": {
	// 	"prefix": "log",
	// 	"body": [
	// 		"console.log('$1');",
	// 		"$2"
	// 	],
	// 	"description": "Log output to console"
	// }
}
